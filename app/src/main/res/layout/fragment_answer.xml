<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AnswerFragment"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="10dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_arrow_back_24"
                android:layout_gravity="center_vertical"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/answerTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/backButton"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/shareButton"
                android:layout_width="30dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/share_icon2"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/shareOptionll2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="end"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/shareIcon2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                app:srcCompat="@drawable/share_icon"
                android:layout_marginEnd="10dp"
                android:visibility="visible"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/copyIcon2"
                android:layout_width="25dp"
                android:layout_height="22dp"
                app:srcCompat="@drawable/copy_icon_v1"
                android:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answerRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        tools:itemCount="5"
        tools:listitem="@layout/answer_item" />

</LinearLayout>